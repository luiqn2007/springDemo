    <security:global-method-security secured-annotations="enabled" jsr250-annotations="enabled"
                                     pre-post-annotations="enabled"/>

    <bean id="userDetailsService" class="org.springframework.security.core.userdetails.jdbc.JdbcDaoImpl">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <security:authentication-manager>
        <security:authentication-provider user-service-ref="userDetailsService">
            <security:password-encoder hash="bcrypt"/>
        </security:authentication-provider>
    </security:authentication-manager>

    <bean id="aclCache" class="org.springframework.security.acls.domain.SpringCacheBasedAclCache">
        <constructor-arg
    </bean>

    <bean id="aclService" class="org.springframework.security.acls.jdbc.JdbcMutableAclService"
          c:_0-ref="dataSource" c:_1-ref="lookupStrategy" c:_2-ref="aclCache"/>

    <bean id="lookupStrategy" class="org.springframework.security.acls.jdbc.BasicLookupStrategy"
          c:_0-ref="dataSource" c:_1-ref="aclCache" c:_2-ref="aclAuthorizationStrategy"
          c:_3-ref="permissionGrantingStrategy"/>

</beans>