<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="controller" class="com.example.mybank.chapter01.FixedDepositControllerV1">
        <property name="fixedDepositService" ref="serivce" />
    </bean>

    <bean id="serivce" class="com.example.mybank.chapter01.FixedDepositService">
        <property name="fixedDepositDao" ref="dao" />
    </bean>

    <bean id="dao" class="com.example.mybank.chapter01.FixedDepositDao" />
</beans>